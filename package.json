{
  "name": "solana-validator-switch",
  "version": "1.0.0",
  "description": "Professional-grade CLI tool for ultra-fast Solana validator switching",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "svs": "dist/bin/svs.js",
    "solana-validator-switch": "dist/bin/solana-validator-switch.js"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
